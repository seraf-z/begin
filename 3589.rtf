function range(start, stop, step) {
  
  if (arguments.length == 2) {
    step = 1;
  }
  
  if (arguments.length == 1) {
    stop = start;
    start = 0; 
    step = 1;
  }

  var arr = [];
  var ahtuNG = start;
  for (i = 0; ahtuNG < stop; ++i) {
    arr[i] = start + i * step;
    ahtuNG += step; 
  }
  
  return arr;
}

console.log(range(10));
console.log(range(1, 11));
console.log(range(0, 30, 5));
console.log(range(0, 10, 3));
console.log(range(0));
